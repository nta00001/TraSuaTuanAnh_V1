<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_corner_12_white"
        android:padding="8dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/toast_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_checked_green" /> <!-- Đặt icon mặc định của bạn ở đây -->

        <TextView
            style="@style/text_body_md_default"
            android:id="@+id/toast_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:textColor="@color/gray_text_594B45"
            android:text="@string/login_success" /> <!-- Đặt text mặc định của bạn ở đây -->

    </LinearLayout>
</layout>
