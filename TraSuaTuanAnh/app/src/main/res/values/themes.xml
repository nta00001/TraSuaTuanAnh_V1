<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TràSữaHoàngHải" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomProgress">
        <item name="colorAccent">@color/yellow_primary</item>
    </style>
    <style name="text_title_sm">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_text_594B45</item>
    </style>
    <style name="text_body_md_expand">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>
    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <style name="text_body_md_strong">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>
    <style name="Button.New.Primary" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="style">@style/text_body_md_strong</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_primary_text_color</item>
        <item name="android:background">@drawable/bg_button_primary_new</item>
    </style>
    <style name="Button.New.Primary.Blue" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="style">@style/text_body_md_strong</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_primary_text_color</item>
        <item name="android:background">@drawable/bt_button_blue</item>
    </style>
    <style name="Button.New.Secondary" parent="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="style">@style/text_body_md_strong</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/button_secondary_text_color</item>
        <item name="android:background">@drawable/bg_button_secondary_new</item>
    </style>
    <style name="TransparentDialog" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>
    <style name="text_body_md_default">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>
    <style name="text_body_md_stronger">
        <item name="android:fontFamily">@font/robotobold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>

    <style name="text_title_md">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_text_594B45</item>
    </style>

    <style name="text_body_sm_strong">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>

    <style name="text_caption_lg">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>

    <style name="text_body_lg_strong">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>

    <style name="text_body_xl_strong">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>

    <style name="text_body_xs_strong">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_text_181C1F</item>
    </style>
</resources>