<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Semi-transparent shadow -->
            <corners android:radius="1000dp" />
        </shape>
    </item>

    <!-- Background Layer -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="1000dp" />
        </shape>
    </item>

</layer-list>
